{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",

    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "tests"],
  "references": [],
  "files": [
    "src/index.ts",
    "src/assert.ts",
    "src/guards.ts",
    "src/id.ts",
    "src/time.ts"
  ]
}
