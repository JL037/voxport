{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "outDir": "dist",
    "rootDir": ".",

    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts"],
  "files": [
    "src/index.ts",
    "src/errors.ts",
    "src/router.ts",
    "src/types.ts"
  ],
  "exclude": ["dist", "tests"],
  "references": []
}
